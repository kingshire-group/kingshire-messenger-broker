{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"module": "ESNext",
		"allowJs": true,
		"noEmit": true,
		"noImplicitAny": false,
		"strict": true,
		"isolatedModules": false,
		"esModuleInterop": true,
    "declaration": true,
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": [
		"lib"
	],
  "exclude": [
      "node_modules"
  ]
}